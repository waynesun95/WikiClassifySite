<% provide(:title, "Search Results") %>


<h3>Search Results for "<%= params[:search] %>"</h3>

<br>

<% if @articles.blank? %>
  <h4>There are no articles named "<%= params[:search] %>"</h4>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Categories</th>
      <th>Cited domains</th>
      <th>Cited authors</th>
      <th>Quality</th>
      <th>Importance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.categories %></td>
        <td><%= article.cited_domains %></td>
        <td><%= article.cited_authors %></td>
        <td><%= article.quality %></td>
        <td><%= article.importance %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
